@model VFHCatalogMVC.Application.ViewModels.Plant.PlantSeedlingVm

<div id="PlaceHolderHere"></div>
         <div class="modal fade" id="Plant">
            <div class="modal-dialog" >
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="addPlantSeedlingLabel">Dodaj sadzonkę</h4>
                        <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                        </button>
                    </div>
                    <div class="modal-body">
         @Html.AntiForgeryToken()
          <div class="row">
                @if (ViewBag.Message != null)
                {
                    <span class="text-success">@ViewBag.Message</span>
                }
                </div>
        <form action="AddSeedling">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label class="text-danger">@ViewBag.Message</label>
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                   <input type="hidden" id="plantId" asp-for="PlantId" class="control-label"/>
                   <input type="hidden" id="userId" asp-for="UserId" class="control-label"/>
                    @if (User.IsInRole("PrivateUser"))
                    {
                        <div class="form-group">
                            <label asp-for="Count" class="control-label">Ilość</label>
                            <input asp-for="Count" class="form-control" />
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Opis</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            }
               @if(User.IsInRole("Company"))
                    {
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Opis</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactDetail.ContactDetailInformation" class="control-label">Link</label>
                            <input asp-for="ContactDetail.ContactDetailInformation" class="form-control" />
                            <span asp-validation-for="ContactDetail.ContactDetailInformation" class="text-danger"></span>
                        </div>
                    }
                </form>
            </div>
           <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Zamknij</button>
                <button type="button" class="btn btn-primary" data-url="/Plants/" data-save="modal">Zapisz</button>
            </div>
      </div>
    </div>
  </div>


    

