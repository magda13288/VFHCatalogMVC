@model VFHCatalogMVC.Application.ViewModels.Plant.PlantSeedVm
<head>
    @* <link href="~/css/site.css" rel="stylesheet" /> *@
    <style>
       body{
        background-color: rgb(33, 37, 41);
        color: white;
        border-block-color: aliceblue;
       }
    </style>
</head>

<body id="modalPopUp">
<div id="PlaceHolderHere"></div>
<div class="modal fade" id="Plant" tabindex="-1" role="dialog" aria-labelledby="addPlantSeedLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addPlantSeedLabel">Dodaj nasiona</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <div class="row">
                    @if (ViewBag.Message != null)
                    {
                        <span class="text-success">@ViewBag.Message</span>
                    }
                </div>
                <form action="AddSeed">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" id="plantId" asp-for="PlantId" class="control-label" />
                    <input type="hidden" id="userId" asp-for="UserId" class="control-label" />
                    @if (User.IsInRole("PrivateUser"))
                    {
                        <div class="form-group">
                            <label asp-for="Count" class="control-label">Ilość</label>
                            <input asp-for="Count" class="form-control" />
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Opis</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    }
                    @if (User.IsInRole("Company"))
                    {
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Opis/Opinia</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Link" class="control-label">Link</label>
                            <input asp-for="Link" class="form-control" />
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>
                    }
                </form>
            </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Zamknij</button>
                        <button type="submit" class="btn btn-primary" data-url="/Plants/" data-save="modal">Zapisz</button>
                    </div>            
        </div>
    </div>
</div>
</body>

