@model VFHCatalogMVC.Application.ViewModels.User.UserSeedsVm

<div class="modal fade" id="User">
            <div class="modal-dialog" >
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="editSeedLabel">Edytuj dane nasion</h4>
                        <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                        </button>
                    </div>
         <div class="modal-body">
        <form action="EditSeed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
                <input type="hidden" asp-for="Id" class="form-control" />
                <input type="hidden" asp-for="PlantId" class="form-control" />
                <input type="hidden" asp-for="DateAdded" class="form-control" />
                <input type="hidden" asp-for="UserId" class="form-control" />
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </form>
    </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Zamknij</button>
                <button type="button" class="btn btn-primary" data-save="modal">Zapisz</button>
            </div>
        </div>
    </div>
</div>